    a.id,
    a.title,
    a.category_id,
    a.user_id,
    a.description,
    a.content,
    a.create_day,
    a.update_day,
    a.good_nums,
    a.read_nums,
    a.is_recommend,
    co.id as cId,
    co.content as cContent,
    co.article_id,
    co.good_nums as cGood,
    co.name cName,
    co.email,
    co.is_root,
    co.is_reply,
    co.create_day as cCreate,
    co.parent_id
    from article a
    left join comments co on  a.id = co.article_id
    where a.id = #{articleId}
  </select>

